{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "strict": true,
        "module": "es6",
        "target": "es5",
        "moduleResolution": "node",
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
